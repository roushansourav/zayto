{
  "name": "zayto-mobile",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "expo start -c",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "dev": "expo start -c",
    "dev:staging": "cross-env EXPO_PUBLIC_API_URL=http://staging.api.zayto.local:8080 expo start -c",
    "dev:prod": "cross-env EXPO_PUBLIC_API_URL=https://api.zayto.com expo start -c",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "jest"
  },
  "dependencies": {
    "@expo/vector-icons": "14.1.0",
    "@react-native-community/datetimepicker": "8.4.1",
    "@react-navigation/bottom-tabs": "6.5.20",
    "@react-navigation/native": "6.1.17",
    "@react-navigation/native-stack": "6.9.26",
    "@types/react": "~19.0.10",
    "axios": "1.7.7",
    "expo": "53.0.22",
    "expo-linear-gradient": "~14.1.5",
    "expo-localization": "~16.1.6",
    "expo-location": "~18.1.6",
    "expo-notifications": "~0.31.4",
    "expo-secure-store": "~14.2.4",
    "expo-status-bar": "~2.2.3",
    "i18n-js": "4.4.3",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-event-source": "1.1.0",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-paper": "5.12.5",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-svg": "15.11.2",
    "react-native-screens": "~4.11.1"
  },
  "devDependencies": {
    "@babel/core": "7.23.0",
    "@react-native-community/eslint-config": "3.2.0",
    "@testing-library/jest-native": "5.4.3",
    "@testing-library/react-native": "12.5.1",
    "@types/jest": "29.5.12",
    "cross-env": "7.0.3",
    "eslint": "9.10.0",
    "eslint-plugin-react": "7.37.1",
    "eslint-plugin-react-hooks": "5.1.0",
    "jest": "29.7.0",
    "jest-expo": "~53.0.10",
    "prettier": "3.3.3",
    "react-test-renderer": "19.0.0",
    "typescript": "~5.8.3"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|expo(nent)?|@expo(nent)?|@expo-google-fonts/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)/)"
    ]
  }
}
